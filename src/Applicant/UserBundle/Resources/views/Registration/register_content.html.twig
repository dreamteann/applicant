{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 'css/signin.css' %}
    <link rel="stylesheet" href="{{ asset(asset_url) }}"/>
    {% endstylesheets %}
{% endblock stylesheets %}

{% block header %}
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Applicant</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></li>
                </ul>
            </div>
        </div>
    </div>
{% endblock header %}

{% block body %}
    <br>
    <br>
    <br>
    <div class="container">
    <form class="form-signin" role="form" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" >
        <h2 class="form-signin-heading">{{ 'layout.register'|trans({}, 'FOSUserBundle' ) }}</h2>
        <input type="hidden" name="_target_path" value="{{ url('fos_user_profile_edit') }}" />

        <div class="form-group">
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder':'form.username' }} ) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'placeholder': 'form.firstname'|trans({}, 'ApplicantUserBundle') } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.surname, { 'attr': {'class': 'form-control', 'placeholder': 'form.surname'|trans({}, 'ApplicantUserBundle') } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'form.email' } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder':'form.password' } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder':'form.password_confirmation' } }) }}
        </div>

        {{ form_widget(form._token) }}

        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">{{ 'registration.submit'|trans({}, 'FOSUserBundle' )}}</button>
        </div>
        {% if form_errors(form.username) %}
            <div class="alert alert-danger">
                {{ form_errors(form.username) }}
            </div>
        {% endif %}
        {% if form_errors(form.email) %}
            <div class="alert alert-danger">
                {{ form_errors(form.email) }}
            </div>
        {% endif %}
        {% if form_errors(form.plainPassword.first) %}
            <div class="alert alert-danger">
                {{ form_errors(form.plainPassword.first) }}
            </div>
        {% endif %}
        {% if form_errors(form.plainPassword.second) %}
            <div class="alert alert-danger">
                {{ form_errors(form.plainPassword.second) }}
            </div>
        {% endif %}
    </form>
{% endblock body %}